@model WebTasks.Models.Shop

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 left-nav text-left">
            <ul>
                <li>Home</li>
                <li>Orders</li>
                <li>Users</li>
                <li><a asp-action="shop" asp-controller="administration">Shop</a></li>
                <li>Reviews</li>
            </ul>
        </div>
        <div class="col-lg-9 right-nav">
            <form method="post" asp-action="push_item" asp-controller="administration">
                <div class="form-group">
                    <label asp-for="title">Title</label>
                    <input class="form-control" asp-for="title">
                </div>
                <div class="form-group">
                    <label asp-for="price">Price</label>
                    <input class="form-control" asp-for="price">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>